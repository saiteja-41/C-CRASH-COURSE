#include <stdio.h>  
  
int main()  
{  
    int i, j,n=5, k;  
    for ( i = 1; i <= n; i++)  
    {  
          
        for ( j = 1; j <= n; j++)  
        {  
            if( j <= i)  
            printf ("*");   
            else  
            printf(" ");  
        }  
        for (j = n; j >= 1; j--)  
        {  
            if(j <= i)  
            printf ("*");  
            else  
            printf(" ");  
        }  
        printf ("\n");  
    }  
}  

